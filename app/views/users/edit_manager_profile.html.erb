<div class="background-blue">
  <div class="row">
    <div class="col-md-6 col-sm-12 d-flex justify-content-center">
      <div class="w-75 my-5 d-flex justify-content-center align-items-center">
        <%= image_tag "We_are_hiring.png", :height=>600, :quality=>100 %>
      </div>
    </div>
    <div class="col-md-6 col-sm-12 d-flex justify-content-center align-items-center">
      <div class="login w-75">
        <h2 class="mt-5">Update your profile</h2>
        <div class="align-items-center p-5">
          <%= simple_form_for @user do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :company %>
              <%= f.input :title %>
              <%= f.input :whatsapp_number %>
              <%= f.input :photo, as: :file, label: "Profile photo" %>
              <div class="form-actions">
                <%= f.button :submit, "Update", class: "btn btn-pri mb-4" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
