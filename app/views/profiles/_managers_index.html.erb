<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 filter">
      <%= form_tag profiles_path, method: :get do %>
      <div>
        <%= text_field_tag :query,
          params[:query],
          class: "form-field mt-4",
          placeholder: "Find a freelancer"
        %>
      </div>
      <div>
        <p>Profession:</p>
        <select class="select2" name="profession">
          <% Profile.all.each do |profile| %>
            <option value="<%= profile.profession %>"><%= profile.profession %></option>
          <% end %>
        </select>
      </div>
      <div>
        <p>Skills</p>
        <select class="select2" name="skill[]" multiple="multiple">
          <% Skill.all.each do |skill| %>
            <option value="<%= skill.skill %>"><%= skill.skill %></option>
          <% end %>
        </select>
      </div>
      <div>
        <p>Location:</p>
        <select class="select2" name="location">
          <% Profile.all.each do |profile| %>
            <option value="<%= profile.location %>"><%= profile.location %></option>
          <% end %>
        </select>
      </div>
      <div class="d-flex justify-content-center p-1">
          <%= submit_tag "Search", class: "btn-pri" %>
      </div>
     <% end %>
    </div>
    <div class="col-sm-10 mt-3">
      <div class = "row">
        <% @freelancers.each do |freelancer| %>
        <div class="col-sm-6 col-lg-4 col-xl-3">
          <div class="card">
              <%= link_to profile_path(freelancer.id) do %>
                <% if freelancer.photo.attached? %>
                  <%= cl_image_tag freelancer.photo.key, :height=>180, :quality=>100, :radius=>64, :width=>180, :crop=>"scale" %>
                <% else %>
                  <%= cl_image_tag "avatar-1577909_640_vq4ofo.png", :height=>180, :quality=>100, :radius=>64, :width=>180, :crop=>"scale", :opacity=>24%>
                <% end %>
              <% end %>
            <h5><%= link_to freelancer.user.first_name, profile_path(freelancer.id) %></h5>
            <div>
              <h6 id="profession"><%= freelancer.profession %></h6>
              <p id="location"><i class="fas fa-map-marker-alt"></i> <%= freelancer.location %></p>
            </div>
            <div class="card-contact">
              <a class="btn-sec" href="mailto:"<% freelancer.user.email %>>Email</a>
              <a class="btn-sec" href="https://wa.me/"<%= freelancer.user.whatsapp_number %>>WhatsApp</a>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
